<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ADScan.Client.Views.AddFilterPage">
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal" VerticalOptions="Center">
            <Image Source="logo.png" HeightRequest="50">
            </Image>
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout Margin="5,10,5,0">
            <Label Text="Introduzca el filtro que desee agregar o modificar" Margin="10,0,0,0" FontSize="25" HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="txtFilter" HorizontalOptions="FillAndExpand" Placeholder="Nombre del filtro"/>
            <Button x:Name="btnAdd" Text="AGREGAR FILTRO" VerticalOptions="EndAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>